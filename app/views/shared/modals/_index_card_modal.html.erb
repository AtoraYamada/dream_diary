<%# 索引カードモーダル（索引箱）- list.html.erb用 %>

<style>
    /* Index Card Modal Overlay */
    .index-card-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.7); /* 暗いオーバーレイ */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        transition: opacity 0.3s ease-out, visibility 0.3s ease-out;
    }

    .index-card-modal-overlay.active,
    .index-card-modal-overlay.visible {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }

    .index-card-modal-overlay .drawer-container {
        position: relative; /* To position the close button */
        background-image: url('<%= asset_path("img_index_box_interior.png") %>'); /* Asset: 索引箱の内装 */
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-position: center;
    }

    .index-card-modal-overlay .close-button {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 30px;
        height: 30px;
        background-color: #f00; /* Example close button color */
        cursor: pointer;
        z-index: 101; /* Above modal content */
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-weight: bold;
        font-family: sans-serif;
    }

    /* Drawer Container */
    .drawer-container {
        width: 800px;
        height: 600px;
        box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.7), 0 10px 20px rgba(0, 0, 0, 0.5); /* Asset: 汎用影テクスチャ */
        position: relative;
        display: flex;
        flex-direction: column;
    }

    /* Drawer Header */
    .drawer-header {
        padding: 15px 20px;
        border-bottom: 2px solid var(--color-brass-dark); /* Asset: 暗い真鍮の区切り線 */
        background: rgba(0,0,0,0.1);
    }

    .selected-tags-area {
        min-height: 30px;
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        align-items: center;
    }

    .selected-tags-area .label {
        font-family: var(--font-pixel);
        color: var(--color-paper);
        font-size: 14px;
    }

    .tag-badge {
        display: inline-flex;
        align-items: center;
        padding: 4px 8px;
        background-color: var(--color-paper); /* Asset: 紙の質感 */
        border: 1px solid var(--color-brass-dark); /* Asset: 暗い真鍮の縁取り */
        font-family: var(--font-pixel);
        font-size: 12px;
        color: var(--color-ink);
        border-radius: 4px;
        box-shadow: 1px 1px 2px rgba(0,0,0,0.2); /* Asset: 汎用影テクスチャ */
    }

    .tag-badge .remove-btn {
        margin-left: 8px;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
    }

    .search-bars {
        margin-top: 10px;
        display: flex;
        gap: 15px;
    }

    .search-bars input {
        flex-grow: 1;
        padding: 8px;
        background-color: var(--color-paper); /* Asset: 紙の質感 */
        border: 1px solid var(--color-brass-dark); /* Asset: 暗い真鍮の縁取り */
        font-family: var(--font-pixel);
        color: var(--color-ink);
        font-size: 16px;
        box-shadow: inset 1px 1px 3px rgba(0, 0, 0, 0.2); /* Asset: 汎用影テクスチャ */
    }

    .search-bars input::placeholder {
        color: var(--color-ink-light); /* Asset: 薄いインクの色 */
        opacity: 0.7;
    }

    /* Drawer Content */
    .drawer-content {
        flex-grow: 1;
        position: relative;
        display: flex;
        overflow: hidden;
    }

    .card-list-area {
        flex-grow: 1;
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
        gap: 15px;
        overflow-y: auto;
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .card-list-area::-webkit-scrollbar {
        display: none;
    }

    /* Index Plate Container */
    .index-plate-container {
        position: absolute;
        right: 0px;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        padding: 10px 0;
        background-color: rgba(42, 34, 31, 0.7); /* Asset: 暗い木材の半透明な背景 */
        border-left: 2px solid var(--color-brass); /* Asset: 真鍮の区切り線 */
        box-shadow: -5px 0 10px rgba(0, 0, 0, 0.5); /* Asset: 汎用影テクスチャ */
        z-index: 100;
    }

    .index-plate {
        width: 40px;
        height: 30px;
        background-color: var(--color-brass); /* Asset: 真鍮の質感 */
        border: 1px solid var(--color-brass-dark); /* Asset: 暗い真鍮の縁取り */
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: var(--font-pixel);
        color: #2a221f;
        font-size: 16px;
        cursor: pointer;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Asset: 汎用影テクスチャ */
        transform: translateX(10px); /* デフォルトで少し隠れる */
        transition: transform 0.2s ease-in-out;
    }

    .index-plate:hover {
        transform: translateX(0px); /* ホバーで完全に表示 */
    }

    /* Tag Card */
    .tag-card {
        width: 180px;
        height: 100px;
        position: relative; /* ピン留めアイコンの配置用 */
        background-image: url('<%= asset_path("img_tag_card_base.png") %>'); /* Asset: タグカード基底 */
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-position: center;
        box-shadow: 3px 3px 8px rgba(0, 0, 0, 0.4); /* Asset: 汎用影テクスチャ */
        padding: 10px;
        font-family: var(--font-pixel);
        color: var(--color-ink);
        font-size: 14px;
        line-height: 1.4;
        cursor: pointer;
        transition: transform 0.3s ease-out, box-shadow 0.3s ease-out, opacity 0.3s;
        transform-origin: bottom left;
        opacity: 1;
    }

    .tag-card.filtered-out {
        opacity: 0;
        pointer-events: none;
    }

    /* ピン留めアイコン */
    .tag-card.selected::after {
        content: '';
        position: absolute;
        top: 8px;
        right: 8px;
        width: 12px;
        height: 12px;
        background-color: var(--color-pin-head); /* Asset: ピンの頭の色 */
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 5px var(--color-pin-head); /* Asset: 発光するピン */
    }

    .tag-card:not(.selected):hover {
        transform: translateY(-5px) scale(1.03);
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.6);
        z-index: 10;
    }

    .tag-title {
        font-weight: bold;
        margin-bottom: 5px;
        text-align: center;
        pointer-events: none;
    }

    .tag-description {
        font-size: 11px;
        color: var(--color-ink-light);
        pointer-events: none;
    }

    /* Drawer Footer */
    .drawer-footer {
        padding: 15px;
        text-align: center;
        border-top: 2px solid var(--color-brass-dark); /* Asset: 暗い真鍮の区切り線 */
        background: rgba(0,0,0,0.1);
        display: flex; /* ボタンを横並びにするため */
        justify-content: center; /* 中央に配置 */
        gap: 15px; /* ボタン間のスペース */
    }

    /* Delete Tag Icon */
    .delete-tag-icon {
        position: absolute;
        bottom: 8px;
        right: 8px;
        width: 24px;
        height: 24px;
        background-image: url('<%= asset_path("img_tag_delete.png") %>'); /* Asset: 破れた紙片 */
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        cursor: pointer;
        opacity: 0.8;
        transition: opacity 0.2s;
        z-index: 15;
    }

    .delete-tag-icon:hover {
        opacity: 1;
    }

    /* Deletion Effect Animation */
    @keyframes crumble-and-fade {
        0% {
            opacity: 1;
            transform: scale(1) rotate(0deg) translateY(0px) translateX(0px);
            filter: blur(0px);
        }
        25% {
            transform: scale(1.02) rotate(1deg) translateY(-2px) translateX(1px);
        }
        50% {
            opacity: 0.7;
            transform: scale(0.95) rotate(-3deg) translateY(5px) translateX(-3px);
            filter: blur(1px);
        }
        75% {
            opacity: 0.3;
            transform: scale(0.8) rotate(5deg) translateY(10px) translateX(5px);
            filter: blur(2px);
        }
        100% {
            opacity: 0;
            transform: scale(0.5) rotate(10deg) translateY(20px) translateX(-10px);
            filter: blur(3px);
            pointer-events: none; /* Make it unclickable after fading */
        }
    }

    .tag-card.is-deleting {
        animation: crumble-and-fade 0.8s forwards; /* Apply animation and keep final state */
    }
</style>

<!-- Index Card Modal -->
